{
	"$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/package.json",
	"name": "edgestatus",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"prepare:kv": "dotenv -e .env -- bash scripts/prepare-kv.sh",
		"prepare:pages": "dotenv -e .env -- bash scripts/prepare-pages.sh",
		"prepare:config": "dotenv -e .env -- bash scripts/prepare-config.sh",
		"deploy": "npm run prepare:config && npm run build && dotenv -e .env -- bash scripts/deploy.sh",
		"build": "vite build",
		"dev": "wrangler pages dev --log-level=debug --local --kv=EDGESTATUS -- npx vite",
		"lint": "eslint --ext .ts,.vue --fix src"
	},
	"devDependencies": {
		"@types/node": "^20.8.6",
		"@typescript-eslint/eslint-plugin": "^6.7.5",
		"@vitejs/plugin-vue": "^4.4.0",
		"@vueuse/core": "^10.5.0",
		"dotenv-cli": "^7.3.0",
		"esbuild": "^0.19.4",
		"eslint": "^8.51.0",
		"eslint-config-standard-with-typescript": "^39.1.1",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-n": "^16.2.0",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-vue": "^9.17.0",
		"typescript": "^5.2.2",
		"vite": "^4.4.11",
		"vite-plugin-info": "0.4.1",
		"vite-plugin-inspect": "^0.7.40",
		"vitest": "^0.34.6",
		"vue-tsc": "^1.8.19",
		"wrangler": "^3.13.1"
	},
	"dependencies": {
		"axios": "^1.5.1",
		"hono": "^3.7.6",
		"http-status-codes": "^2.3.0",
		"vue": "^3.3.4",
		"xksuid": "^0.0.3"
	}
}