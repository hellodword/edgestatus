{
    "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["ESNext", "DOM"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ESNext",
        "types": ["vite/client", "vite-plugin-info/client"],
        "paths": {
            "@": ["src"],
            "@/*": ["src/*"],
            "@functions": ["functions"],
            "@functions/*": ["functions/*"]
        },
        "useDefineForClassFields": true
    },
    "exclude": ["**/dist/**"],
    "include": [
        "src/*.ts",
        "src/**/*.ts",
        "src/*.vue",
        "src/**/*.vue",
        "functions/*.ts",
        "functions/**/*.ts"
    ]
}
